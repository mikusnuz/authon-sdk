{
  "name": "@authon/nextjs",
  "version": "0.1.14",
  "description": "Authon Next.js SDK â€” middleware, server helpers, and React components",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
