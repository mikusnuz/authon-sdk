    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikusnuz/authon-sdk.git",
    "directory": "packages/nextjs"
  },
  "homepage": "https://github.com/mikusnuz/authon-sdk/tree/main/packages/nextjs",
  "publishConfig": { "access": "public" },
  "keywords": ["authon", "auth", "nextjs", "middleware", "sdk"],
  "dependencies": {
    "@authon/shared": "workspace:*",
    "@authon/react": "workspace:*"
  },
  "peerDependencies": {
    "next": "^14.0.0 || ^15.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "next": "^15.3.0",
    "react": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.3"
  }
}
